# SSL Production Environment Configuration

# Database
POSTGRES_DB=aci_db
POSTGRES_USER=aci_user
POSTGRES_PASSWORD=production_secure_password_2024
DATABASE_URL=postgresql://aci_user:production_secure_password_2024@postgres:5432/aci_db

# Security
SECRET_KEY=production-super-secret-key-ssl-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=production
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# CORS - SSL Production Origins
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com","https://api.yourdomain.com"]
ALLOWED_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
ALLOWED_HEADERS=["Content-Type","Authorization","Accept","Origin","X-Requested-With","Cache-Control"]
ALLOW_CREDENTIALS=true
MAX_AGE=86400

# Frontend
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NODE_ENV=production

# SSL Configuration
SSL_DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Docker
NGINX_PORT=80
NGINX_SSL_PORT=443